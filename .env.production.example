# Production Environment Variables for Hetzner VM
# Copy this to .env on your production server

# App Configuration
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate_show
APP_ENV=production
APP_DEBUG=false
APP_URL=https://leafmark.app

# Database Configuration
DB_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
MYSQL_ROOT_PASSWORD=GENERATE_DIFFERENT_SECURE_PASSWORD_HERE

# Optional: Book API Keys
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Generate secure passwords with: openssl rand -base64 24

# Database Configuration
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=leafmark
MYSQL_USER=leafmark
MYSQL_PASSWORD=your_database_password_here
DATABASE_URL=mysql://leafmark:your_database_password_here@db:3306/leafmark

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_chars

# API URLs
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# External Book APIs (optional)
GOOGLE_BOOKS_API_KEY=
ISBNDB_API_KEY=

# Application Settings
NODE_ENV=development
PORT=3000
BACKEND_PORT=3001

# Production URLs (for deployment)
# API_URL=https://api.leafmark.yourdomain.com
# FRONTEND_URL=https://leafmark.yourdomain.com
# CORS_ORIGIN=https://leafmark.yourdomain.com
